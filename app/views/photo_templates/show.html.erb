<h1>Photo Details</h1>

<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_photo %>">
  </dd>
  <dt>
    Caption
  </dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>
  <dt>
    Owner
  </dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>
  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.created_at %>
  </dd>
  <dt>
    Edit photo
  </dt>
  <dd>
    Form goes here
  </dd>
  <dt>
    Delete photo
  </dt>
  <dd>
    Delete link
  </dd>
</dl>

<h2>
  Comments
</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>
      <td>
        <%= comment.body %>
      </td>
      <td>
        <%= comment.created_at %>
      </td>
    </tr>

  <% end %>
</table>

